<div id="<%= dom_id comment %>">
  <% unless !comment.persisted? %>
  <div class="card">
    <div class="card-body">
      <%= comment.body %>
      <p><%=comment.created_at%></p>
      <%= button_to "Destroy this comment", project_comment_url(comment.project, comment), method: :delete %>
    </div>
  </div>
  <% end %>
</div>
